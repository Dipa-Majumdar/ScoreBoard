@model MusicShop.DomainModel.Models.InstrumentModel
@{
    ViewData["Title"] = "Welcome";
}

<h2>Welcome</h2>


<form asp-action="Add">
    <button type="submit" class="btn btn-sm btn-primary d-none d-md-inline-block">
        Add
    </button>
</form>
<form asp-action="Index">
    <button type="submit" class="btn btn-sm btn-primary d-none d-md-inline-block">
        Home
    </button>
</form>

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Model</th>
        <th>Type</th>
        <th>Price</th>
        <th>Features</th>
    </tr>
    @foreach (var instrument in ViewData["Message"] as IList<MusicShop.DomainModel.Models.InstrumentModel>)
    {
        <tr>
            <td>@instrument.Model</td>
            <td>@instrument.Type</td>
            <td>@instrument.Price</td>
            <td>@instrument.Features</td>
            <td><form asp-action="Delete" asp-route-id="@instrument.Id">
                <button type="submit" class="btn btn-sm btn-danger d-none d-md-inline-block">
                    Delete
                </button>
                </form>
            </td>
        </tr>
    }
</table>  